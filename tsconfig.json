{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Paths alias */
    "baseUrl": ".", //Required when using paths, cause mappings below are relative to this one
    "paths": {
      "@components/*": ["src/components/*"],
      "@app/*": ["src/*"], // Alias /src to /app
      "@public/*": ["public/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
